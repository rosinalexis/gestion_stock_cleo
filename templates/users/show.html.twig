{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.firstname }}</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.lastname }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_users_index') }}" class="btn btn-primary">Retour à la liste des utilisateurs</a>

	<a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier Utilisateur</a>

	{{ include('users/_delete_form.html.twig') }}
{% endblock %}
